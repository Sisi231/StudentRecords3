                            <ImageBrush ImageSource="C:\Sisi\Book.png"/>
                        </Button.Background>
                    </Button>
                    <TextBox Height="24" TextWrapping="Wrap" Text="student_records.database" Margin="0,0,0,0" Width="155" Foreground="White" Background="Black" BorderBrush="Black"/>
                </StackPanel >
                <Label Content="Subjects" Foreground="White" FontSize="18" HorizontalAlignment="Center" Margin="72,-7,72.333,0" Height="36"/>
                <StackPanel Orientation="Horizontal" Background="Black" Margin="0,0,0.333,0">
                    <Label Content="Math 2" Foreground="White" HorizontalAlignment="Center" Margin="10,0,122.333,0" Width="91"/>
                    <TextBox x:Name="txt1" Background="LightSlateGray" Foreground="white" FontSize="12" Margin="-130,0,7.333,0" Height="20" Width="89"/>
                </StackPanel>
